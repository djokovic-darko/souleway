{% comment %}
** Featured blog - homepage partial **
- Draggable section
{% endcomment %}

{% include 'include-featured-blog' %}

{% schema %}

{
  "name": "Blog posts",
  "class": "featured-blog-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Journal"
    },
	{
      "type": "text",
      "id": "section_subtitle",
      "label": "Section Subtitle",
      "default": "Your daily dose"
    },
    {
      "type": "blog",
      "id": "blog_widget_select",
      "label": "Blog"
    },
	{
      "type": "text",
      "id": "blog_subtitle",
      "label": "Blog Subtitle",
      "default": "weiterlesen"
    },
    {
      "type": "url",
      "id": "blog_sub_link",
      "label": "Blog Subtitle Url"
    },
    {
      "type": "range",
      "id": "home_page_articles",
      "label": "Posts",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "blog_tags",
      "label": "Show tags"
    },
    {
      "type": "checkbox",
      "id": "blog_author",
      "label": "Show author"
    },
    {
      "type": "checkbox",
      "id": "read_time",
      "label": "Show estimated read time",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "blog_date",
      "label": "Show date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "blog_excerpts",
      "label": "Show Blog Excerpt",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "blog_comment_count",
      "label": "Show comment count",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "read_more_link",
      "label": "Show continue reading link",
      "default": true
    },
    {
      "type": "range",
      "id": "content_margin_top",
      "label": "Section Margin Top",
      "min": 0,
      "max": 100,
      "default": 50,
      "unit": "px"
     },
    {
      "type": "range",
      "id": "content_margin_bottom",
      "label": "Section Margin Bottom",
      "min": 0,
      "max": 100,
      "default": 50,
      "unit": "px"
    }
  ],
  "presets": [{
    "name": "Blog posts",
    "category": "Blog",
    "settings": {
      "blog_widget_select": ""
    }
  }]
}
{% endschema %}
