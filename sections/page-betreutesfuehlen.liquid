                              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                            </p>
                            {% endif %}

                            {% if block.settings.block_url2 != blank %}
                            <div class="collection_link_wrapper">
                              <a href="{{ block.settings.block_url2 }}" class="action_button">
                                {{ block.settings.block_label2 }}
                              </a>
                            </div>         
                            {% endif %}

                          </div>
                        </div>
                        </div>
                      </div>
                      
               {% elsif block.type == 'featured_collection' %}
                    <div class="featured-collection-section">
                        {% assign variantLimit = block.settings.variant_limit %} 
                        {% assign productLimit = block.settings.product_limit_to_show %}
                        {% assign mobile_gridValue = block.settings.collection_mobile_grid %} 
                        {% include 'include-best-collection', type: 'block', mobile_grid: mobile_gridValue, variantLimit: variantLimit, productLimit: productLimit %}
                    </div>
              {% elsif block.type == "featured_video" %}
