                 	<div class="container full-width--false collection_with_product_image">
                      <div class="twelve columns offset-by-two medium-down--one-whole equal-columns--outside-trim">
                                               
 						{% assign limit = 1 %}
                        {% assign settingCollection =  block.settings.col_url %}
                        {% assign collection = collections[settingCollection] %}
                        {% assign products = collections[settingCollection].products %}

                        
                         <div class="one-half columns medium-down--one-whole  small-down--one-whole">
                           <div class="collection_image_wrapper">
                               {% if block.settings.col_image_checkbox == true %}
                                {% include 'image-element', image: collection.image.src, alt: collection.image.alt %}
                               {% else %}
                                {% include 'image-element', image: block.settings.col_image.src, alt: block.settings.col_image.alt %}
                               {% endif %}
                           </div>
                       	 </div>
                         <div class="one-half columns medium-down--one-whole  small-down--one-whole">
                          <div class="product_image_wrapper">

                              {% for product in products %}
                                {% for variant in product.variants limit: 1 %}
                                  <a href="{{ variant.url | within: collection }}">
                                   
                                    {% if variant.image != blank %}
                                    {% include 'image-element', image: variant.image.src, alt: variant.image.alt %}
                                    {% else %}
                                    <p>
                                      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                    </p>
                                    {% endif %}
                                     
                                  </a>
                            
                            	<div class="image_overlay">
                           		 </div>
                                {%endfor%}
                              {% endfor %}
                            
                           </div>
                         </div>
                    </div>
                 {%endif%}
                      
                 {%elsif block.type == 'page_block' %}
                      
                      <div class="container full-width--false">
                        <div class="twelve columns offset-by-two medium-down--one-whole equal-columns--outside-trim">
                            <div class="eight columns medium-down--one-half two_collection_blocks_wrapper text-column">
                              <div class="wrapper_block">

                                {% if block.settings.block_image1 != blank %}
                                {% include 'image-element', image: block.settings.block_image1.src, alt: block.settings.block_image1.alt %}
                                {% else %}
                                <p>
                                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                </p>
                                {% endif %}

                                {% if block.settings.block_url1 != blank %}
