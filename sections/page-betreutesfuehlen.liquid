                                  <a href="{{ block.settings.block_url1 }}" class="action_button">
                                    {{ block.settings.block_label1 }}
                                  </a>
                                </div>         
                                {% endif %}

                              </div>
                            </div>
                        	<div class="eight columns medium-down--one-half two_collection_blocks_wrapper text-column">
