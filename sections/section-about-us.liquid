<div class="custom-page-wrapper">
  {% for block in section.blocks %}

            <div {{ block.shopify_attributes }} class="page_section_wrapper block__{{ block.type }} block__{{ block.id }}">

            {% if block.type == "image_with_text_overlay" %}
              
                <!-- Image with text overlay -->
            	{% include 'include-image-with-text-overlay', type: 'block' %}
              
             {% elsif block.type == "image_with_text" %}
              <div class="container">
                <div class="image-with-text
                  featured_collections
                  clearfix across-1 image-align--{{ block.settings.frontpage_image_position }}">
                  <section class="featured-link--section featured-link--image section-{{ forloop.index }}">
                    <div class="featured-link--half featured-link--image image-crop--{{ block.settings.image_crop }}">
                      <div class="featured-link--wrap">
                        <a {% if block.settings.link != blank %}href="{{ block.settings.link }}"{% endif %} title="{{ block.settings.title }}">
                          {% if block.settings.image %}
                            {% include 'image-element', image: block.settings.image, alt: block.settings.image.alt %}
                          {% else %}
                            {% capture i %}{% cycle "1", "2", "3", "4", "5", "6" %}{% endcapture %}
                            {{ 'collection-' | append: i | placeholder_svg_tag: 'placeholder-svg placeholder-svg--promotions' }}
                          {% endif %}
                        </a>
                      </div>
                    </div>
                    <div class="featured-link--half">
                      <div class="info text-align--{{block.settings.frontpage_text_align}}">
                        <a {% if block.settings.link != blank %}href="{{ block.settings.link }}"{% endif %} class="collection_title">
                          {{ block.settings.title }}
                        </a>
                        {% if block.settings.text != blank %}
                          <div class="description">{{ block.settings.text }}</div>
                        {% endif %}
                        {% if block.settings.button_label != blank %}
                          <a {% if block.settings.link != blank %}href="{{ block.settings.link }}"{% endif %} class="button">
                            {{ block.settings.button_label }}
                          </a>
                        {% endif %}
                      </div>
                    </div>
                  </section>
                </div>
              </div>
              
              {%elsif block.type == 'content-block' %}
              
              {% include 'include-featured-text',  type: 'block' %}
              
              {% elsif block.type == "blog_posts" %}
              <div class="blog_wrapper">
              <!-- Blog posts -->
              {% include 'include-featured-blog', type: 'block' %}
              </div>
              
              {% elsif block.type == "featured_video" %}
              <!-- Featured video -->
              {% include 'include-video', type: 'block' %}
              
              {% elsif block.type == 'two-collection-block' %} 
              
              {% assign sectionTitle = block.settings.section_title %}
              {% assign sectionSubTitle = block.settings.section_subtitle %}
              
              {% if sectionTitle != blank or sectionSubTitle != blank %} 
              <div class="container">
                  <div class="page-section-title-wrapper section--header--wrapper">
                  <div class="page_section_header one-half medium-down--one-half small-down--one-half columns no-margin ">
                      <div class="section_header_block">
                        <div class="section_title">
                          <p>{{sectionTitle}}</p>
                        </div>
                        <div class="section_subtitle">
                          <h4>{{sectionSubTitle}}</h4>
                        </div>
                      </div>
                  </div>

                  {% assign collection1 = collections[settingCollection] %}
                  <div class="view_all_btn one-half medium-down--one-half small-down--one-half columns text-right no-margin">
                    <a class="action_button" href="{{block.settings.collection1}}">Alle anzeigen</a>
                  </div>
                  </div>
              </div>
              {%endif%}
              <div class="container">
              	<div class="custom-two-collection-block">
                <div class="one-half columns medium-down--one-whole small-down--one-whole two_collection_blocks_wrapper" {{ block.shopify_attributes }}>
                  <div class="wrapper_block text-align--{{ block.settings.align_text1 }}">

                    <div class="desktop-only">
                      {% if block.settings.image1 != blank %}
                      {% include 'image-element', image: block.settings.image1.src, alt: block.settings.image1.alt %}
                      {% else %}
                      <p>
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                      </p>
                      {% endif %}
                    </div>
                    <div class="mobile-only">
                      {% if block.settings.mobile_image1 != blank %}
                      {% include 'image-element', image: block.settings.mobile_image1.src, alt: block.settings.mobile_image1.alt %}
                      {% else %}
                      {% if block.settings.image1 != blank %}
                      	{% include 'image-element', image: block.settings.image1.src, alt: block.settings.image1.alt %}
                        {% else %}
                          <p>
                            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                          </p>
                        {% endif %}
                      {% endif %}
                    </div>
                    {% endif %}
                    {% if block.settings.button_label1 != blank and block.settings.button_link1 != blank %}
                    <div class="collection_link_wrapper">
                      <a href="{{ block.settings.button_link1 }}" class="action_button">
                        {{ block.settings.button_label1 | escape }}
                      </a>
                      <div class="subheading white-arrow-icon">
                        <a href="{{ block.settings.button_link1 }}" class="action_button subtext">{{block.settings.section_subtext1 | escape }}
                          {%comment%} 
                          <span class="arrow_icon">
                            {% include 'arrow' %}
                          </span>
                          {%endcomment%}
                        </a>
                      </div>        

                    </div>         


                  </div>
                </div>

                <div class="one-half columns medium-down--one-whole small-down--one-whole two_collection_blocks_wrapper" {{ block.shopify_attributes }}>
                  <div class="wrapper_block text-align--{{ block.settings.align_text2 }}">

                    <div class="desktop-only">
                      {% if block.settings.image2 != blank %}
                      {% include 'image-element', image: block.settings.image2.src, alt: block.settings.image2.alt %}
                      {% else %}
                      <p>
